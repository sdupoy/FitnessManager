<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sys_view1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Setting"
            android:textSize="25dp"
            android:textColor="#DDF2561F"
            android:background="#fef1e3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7FD6D6D6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Password"
                android:textColor="@color/text_black"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/sys_pass_view"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="default"
                android:textColor="@color/text_black" />
            <Button
                android:id="@+id/btn_sys_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change"
                android:layout_alignParentEnd="true"
                android:background="#DDF2561F"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7FD6D6D6" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:orientation="horizontal">
            <TextView

                android:id="@+id/sys_view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Units"
                android:textColor="@color/text_black"
                android:textSize="20sp" />

            <RadioGroup
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metrics"
                    android:textColor="@color/text_black"
                    android:id="@+id/radioButton_metrics"
                    android:gravity="center"
                    android:layout_centerVertical="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Imperial"
                    android:textColor="@color/text_black"
                    android:id="@+id/radioButton_imperial"
                    android:gravity="center"
                    android:layout_centerVertical="true"/>

            </RadioGroup>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7FD6D6D6" />

    </LinearLayout>

</ScrollView>

