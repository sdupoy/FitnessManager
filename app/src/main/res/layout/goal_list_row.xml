<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="goalType"
        android:id="@+id/goalType"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@+id/goalNb"
        android:layout_alignBottom="@+id/goalNb"
        android:layout_toEndOf="@+id/goalNb"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:text="goalNumber"
        android:id="@+id/goalNb"
        android:layout_alignParentTop="true"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:text="goalFreq"
        android:id="@+id/goalFreq"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp" />

</RelativeLayout>
