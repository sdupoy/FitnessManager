<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff">

    <PreferenceCategory
        android:summary="Username and password information"
        android:title="Login information" >

        <EditTextPreference
            android:key="username"
            android:summary="click to Please enter your login username"
            android:title="Username" />

        <EditTextPreference
            android:key="password"
            android:summary="click to Enter your password"
            android:title="Password" />
    </PreferenceCategory>

    <PreferenceCategory
        android:summary="Username and password information"
        android:title="Settings" >

        <CheckBoxPreference
            android:key="checkBox"
            android:summary="On/Off"
            android:title="Keep logged in" />

        <SwitchPreference
            android:key="switch"
            android:title="switch some..."
            android:summary="switch unit?"/>

        <ListPreference
            android:entries="@array/listOptions"
            android:entryValues="@array/listValues"
            android:key="listpref"
            android:summary="can do list option"
            android:title="List preference" />
    </PreferenceCategory>
</PreferenceScreen>